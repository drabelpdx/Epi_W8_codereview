<h3>Add a new question</h3>

<form>
  <div class="form-group">
    <label for="question">Question: </label>
    {{textarea id="question" class="form-control" rows="2" value=question}}
  </div>

  <div class="form-group">
    <label for="description">Provide more detail: </label>
    {{textarea id="description" class="form-control" rows="5" value=description}}
  </div>

  <div class="form-group">
    <label for="author">Name: </label>
    {{input id="author" class="form-control" value=author}}
  </div>

  <button class="btn btn-primary" {{action 'save'}}>Save</button>

</form>
